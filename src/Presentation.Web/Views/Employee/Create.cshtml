@model Application.DTOs.Employees.CreateEmployeeDTO

<h2>Crear Empleado</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Document"></label>
        <input asp-for="Document" class="form-control" required />
    </div>
    
    <div class="form-group">
        <label asp-for="FirstNames"></label>
        <input asp-for="FirstNames" class="form-control" required />
    </div>
    
    <div class="form-group">
        <label asp-for="LastNames"></label>
        <input asp-for="LastNames" class="form-control" required />
    </div>
    
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" type="email" class="form-control" required />
    </div>
    
    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" required />
    </div>
    
    <div class="form-group">
        <label>Departamento</label>
        <select asp-for="DepartmentId" class="form-control" 
                asp-items="@(new SelectList(ViewBag.Departments, "Id", "Name"))" required>
        </select>
    </div>
    
    <button type="submit" class="btn btn-primary">Crear</button>
</form>